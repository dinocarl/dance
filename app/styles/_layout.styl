#layout
  display flex
  flex-flow column no-wrap
  align-items stretch
  height 100%
  background-color palette(nav)

#header
  order 1
  flex none
  border-bottom 1px solid palette(separator)
  padding: 1em
#content
  order 2
  flex 1 0 auto
  padding .5em
  background-color palette(bg)
#footer
  order 3
  flex none
  border-top 1px solid palette(separator)
  padding 1.5em
  